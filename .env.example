# 环境设置 (True=开发环境, False=生产环境)
DEBUG=True

# 安全设置
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库配置
DB_ENGINE=django.db.backends.mysql
DB_NAME=music_website
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# 媒体和静态文件设置
MEDIA_ROOT=media
MEDIA_URL=/media/
STATIC_URL=/static/
STATIC_ROOT=static_collected

# 上传文件大小限制 (字节)
MAX_UPLOAD_SIZE=20971520  # 20MB

# 日志设置
LOG_FILE=logs/error.log
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 安全配置
SECURE_SSL_REDIRECT=False  # 生产环境设为True
SESSION_COOKIE_SECURE=False  # 生产环境设为True
CSRF_COOKIE_SECURE=False  # 生产环境设为True
SECURE_HSTS_SECONDS=0  # 生产环境设为31536000 (1年)

# 可选功能开关
ENABLE_AI_CHAT=True
ENABLE_MUSIC_RECOMMENDATIONS=True

# 缓存设置（生产环境使用）
# CACHE_BACKEND=django.core.cache.backends.memcached.PyMemcacheCache
# CACHE_LOCATION=127.0.0.1:11211

# Redis设置（可选）
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# 邮件设置 (生产环境)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@example.com
# EMAIL_HOST_PASSWORD=your_email_password
# DEFAULT_FROM_EMAIL=Music Website <your_email@example.com>

# 错误跟踪（生产环境使用）
# SENTRY_DSN=your_sentry_dsn

# 管理员设置（生产环境使用）
# ADMINS=Admin:admin@example.com,Manager:manager@example.com